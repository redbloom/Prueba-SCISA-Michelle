@model Prueba_SCISA_Michelle.Models.Dtos.PokemonFilterDto
@{
    ViewData["Title"] = "Pokemon";
    Layout = "_Layout";
}

<div>
    <!-- Alertas -->
    <div id="alerts" class="my-3"></div>

    <!-- Filtros -->
    <div class="card filters-card mb-4 glass-card">
        <div class="card-header bg-transparent border-bottom-0pb-2">
            <h5 class="mb-0 text-white">
                <i class="mdi mdi-filter-variant me-2"></i>Filtros de Búsqueda
            </h5>
        </div>
        <div class="card-body pt-0 mt-4">
            <form id="filtersForm" method="post" class="row g-3 align-items-center"
                  data-list-url="@Url.Action("List", "Pokemon")"
                  data-export-url="@Url.Action("Export", "Pokemon")"
                  data-email-all-url="@Url.Action("SendAll", "Pokemon")"
                  data-species-url="@Url.Action("Species", "Pokemon")">
                @Html.AntiForgeryToken()

                <!-- Nombre -->
                <div class="col-md-4">
                    <label class="form-label fw-bold text-white">Nombre del Pokémon</label>
                    <div class="input-group input-group-glow">
                        <span class="input-group-text bg-light-blue">
                            <i class="mdi mdi-magnify"></i>
                        </span>
                        <input name="Name" class="form-control form-control-modern" placeholder="p. ej. pikachu, charmander..." />
                    </div>
                </div>

                <!-- Especie -->
                <div class="col-md-4">
                    <label class="form-label fw-bold text-white">Especie</label>
                    <div class="input-group input-group-glow">
                        <span class="input-group-text bg-light-blue">
                            <i class="mdi mdi-tag-outline"></i>
                        </span>
                        <select name="SpeciesId" id="speciesSelect" class="form-select form-control-modern">
                            <option value="">Todas las especies</option>
                        </select>
                    </div>
                </div>

                <!-- Acciones -->
                <div class="col-md-4 d-flex justify-content-end">
                    <div class="d-flex gap-2">
                        <button type="submit" id="btnSearch" class="btn btn-primary glossy-btn">
                            <i class="mdi mdi-database-search me-1"></i> Buscar Pokémon
                        </button>
                        <button type="button" id="btnClear" class="btn btn-outline-light glossy-btn">
                            <i class="mdi mdi-broom me-1"></i> Limpiar
                        </button>
                    </div>
                </div>

                <!-- Hidden para paginación -->
                <input type="hidden" name="Page" value="@Model.Page" />
                <input type="hidden" name="PageSize" value="@Model.PageSize" />
            </form>
        </div>
    </div>

    <!-- Grid -->
    <div class="pokemon-grid">
        <div class="card glass-card p-4">
            <div class="card-header bg-transparent border-bottom-0">
                <h5 class="mb-0 text-white">
                    <i class="mdi mdi-view-grid me-2"></i>Lista de Pokémon
                </h5>
            </div>

            <div class="d-flex flex-wrap gap-2 justify-content-end mt-4 mb-2 px-4">
                <button type="button" id="btnExport" class="btn btn-success glossy-btn">
                    <i class="mdi mdi-file-excel me-1"></i> Exportar Excel
                </button>

                <button type="button"
                        class="btn btn-warning glossy-btn js-email-all">
                    <i class="mdi mdi-email-send me-1"></i> Enviar listado por correo
                </button>
            </div>
            
            <div class="card-body">
                <div id="pokemonList" class="text-center">
                   
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/index.js" asp-append-version="true"></script>
    <script src="~/js/email.modal.js" asp-append-version="true"></script>
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            PokemonIndex.init();
        });
        $(function () { window.PokemonEmail.init(); });
    </script>
}
