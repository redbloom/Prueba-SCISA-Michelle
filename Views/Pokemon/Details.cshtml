@model Prueba_SCISA_Michelle.Models.Dtos.PokemonDetailDto
@{
    ViewData["Title"] = $"Pokemon #{Model.Id}";
    Layout = "_Layout";
}

<div class="container">

    <div class="card shadow-sm mb-3">
        <div class="card-body d-flex flex-column flex-md-row align-items-center gap-4">

            <img src="@Model.ImageUrl"
                 alt="@Model.Name"
                 class="rounded"
                 style="width:160px;height:160px;image-rendering:auto;">

            <div class="flex-grow-1">
                <h2 class="h3 mb-1 text-capitalize">@Model.Name</h2>

                <div class="d-flex flex-wrap gap-2 mb-3">
                    <span class="badge text-bg-primary">id: @Model.Id</span>
                    <span class="badge text-bg-success text-capitalize">especie: @Model.SpeciesName</span>
                    <span class="badge text-bg-secondary">exp base: @Model.BaseExperience</span>
                </div>

                <div class="row g-3">
                    <div class="col-6 col-md-4">
                        <div class="small text-muted">altura</div>
                        <div class="fs-5">@Model.HeightMeters m</div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="small text-muted">peso</div>
                        <div class="fs-5">@Model.WeightKg kg</div>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column gap-2 ms-md-3">
                <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Pokemon")">Volver</a>

                <button type="button"
                        class="btn btn-warning"
                        data-role="email-one"
                        data-pokemon-id="@Model.Id"
                        data-pokemon-name="@Model.Name">
                    Enviar por correo
                </button>

            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header-details fw-semibold">Datos tecnicos</div>
        <div class="card-body p-0">
            <table class="table mb-0">
                <tbody>
                    <tr>
                        <th style="width:220px">id</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th>nombre</th>
                        <td class="text-capitalize">@Model.Name</td>
                    </tr>
                    <tr>
                        <th>especie</th>
                        <td class="text-capitalize">@Model.SpeciesName</td>
                    </tr>
                    <tr>
                        <th>exp base</th>
                        <td>@Model.BaseExperience</td>
                    </tr>
                    <tr>
                        <th>altura</th>
                        <td>@Model.HeightMeters m (@Model.Height dm)</td>
                    </tr>
                    <tr>
                        <th>peso</th>
                        <td>@Model.WeightKg kg (@Model.Weight hg)</td>
                    </tr>
                    <tr>
                        <th>sprite url</th>
                        <td><a href="@Model.ImageUrl" target="_blank">@Model.ImageUrl</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/views/details.js" asp-append-version="true"></script>
    <script src="~/js/email.modal.js" asp-append-version="true"></script>
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            if (window.PokemonDetails?.init) PokemonDetails.init(); 
            if (window.PokemonEmail?.init) PokemonEmail.init();  
        });
    </script>
}

